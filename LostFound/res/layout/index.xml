<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    tools:context="com.bmob.demo.sms.MainActivity"
    android:orientation="vertical" >

    <include layout="@layout/include_header" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/layout_bg_color"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/layout_bg_color"
            android:orientation="vertical"
            tools:context="com.bmob.demo.sms.MainActivity" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:padding="5dp"
                    android:text="用户名" />

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="admin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:padding="5dp"
                    android:text="电话号码" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="未绑定" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_bind"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_btn_press_selector_1"
                android:onClick="bind"
                android:text="绑定手机号"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="invisible" >
            </Button>

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_press_selector_1"
                android:onClick="resetPasswordByCode"
                android:text="通过手机号重置密码"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="invisible" >
            </Button>

            <Button
                android:id="@+id/btn_mylost"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_press_selector_1"
                android:onClick="toMyLost"
                android:text="my lost"
                android:textColor="#ffffff"
                android:textSize="16sp" >
            </Button>

            <Button
                android:id="@+id/btn_myfound"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_press_selector_1"
                android:onClick="toMyFound"
                android:text="my found"
                android:textColor="#ffffff"
                android:textSize="16sp" >
            </Button>

            <Button
                android:id="@+id/lost"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_press_selector_1"
                android:onClick="toLost"
                android:text="All Lost"
                android:textColor="#ffffff"
                android:textSize="16sp" >
            </Button>

            <Button
                android:id="@+id/found"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_press_selector_1"
                android:onClick="toFound"
                android:text="All Found"
                android:textColor="#ffffff"
                android:textSize="16sp" >
            </Button>

            <Button
                android:id="@+id/exit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_press_selector_1"
                android:onClick="exit"
                android:text="退出登录"
                android:textColor="#ffffff"
                android:textSize="16sp" >
            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>